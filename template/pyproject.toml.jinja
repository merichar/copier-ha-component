[project]
name = "{{ component_slug }}"
version = "0.1.0"
description = "{{ component_name }} for Home Assistant"
authors = [
    {name = "{{ author_name }}", email = "{{ author_email }}"}
]
requires-python = ">=3.12"
dependencies = []

[project.optional-dependencies]
dev = [
    "homeassistant>=2024.1.0",
    "pre-commit>=3.5.0",
    "pytest>=7.4.0",
    "pytest-homeassistant-custom-component>=0.13.0",
    "ruff>=0.1.0",
]

[tool.ruff]
target-version = "py312"
line-length = 88

[tool.ruff.lint]
select = [
    "E",   # pycodestyle errors
    "F",   # pyflakes
    "W",   # pycodestyle warnings
    "I",   # isort
    "N",   # pep8-naming
    "UP",  # pyupgrade
    "B",   # flake8-bugbear
]

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
